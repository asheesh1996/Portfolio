@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.Google" Color="Color.Inherit" Link="https://scholar.google.com/citations?user=PfqnJZgAAAAJ&hl=en&authuser=1" Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Color="Color.Inherit" Link="https://www.linkedin.com/in/asheesh-maheshwari/" Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/asheesh1996/" Target="_blank" />
        <MudAvatar Image="images/profile2.jpg" Size="MudBlazor.Size.Medium" Class="ma-4 " />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1" Variant="@DrawerVariant.Responsive">
        <MudDrawerHeader>
            @if (_drawerOpen)
            {
                <MudText Typo="Typo.h6">! ! ! N A M A S T E ! ! !</MudText>
            }

        </MudDrawerHeader>
        <NavMenu />
        <MudSpacer />
        @if (_drawerOpen)
        {
            <MudSwitch @bind-Checked="@_isDarkMode" Color="Color.Tertiary" Class=" ma-4 pa-4  " T="bool" Label="Switch Light/Dark Theme" />
        }

    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="ma-1 pa-1">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    private MudTheme _theme = new();
    private bool _isDarkMode = true;
    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
