@page "/sudoku"

<PageTitle>Sudoku Game</PageTitle>

<div class="container">
  <iframe class="sudoku-iframe" src="https://asheesh1996.github.io/sudokuapp/"></iframe>
</div>


<style>
.container {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 90vh; /* 16:9 Aspect Ratio (divide 9 by 16 = 0.5625) */
}

/* Then style the iframe to fit in the container div with full height and width */
.sudoku-iframe {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
}
</style>
